<?xml version="1.0"?>
    <config>
        <modules>
            <Webgility_Ecc>
                <version>1.0.0</version>
            </Webgility_Ecc>
        </modules>
        <frontend>
            <routers>
                <ecc>
                    <use>standard</use>
                    <args>
                        <module>Webgility_Ecc</module>
                        <frontName>ecc</frontName>
                    </args>
                </ecc>
            </routers>
            <layout>
                <updates>
                    <ecc>
                        <file>ecc.xml</file>
                    </ecc>
                </updates>
            </layout>
        </frontend> 
		<admin>
        <routers>
            <ecc>
                <use>admin</use>
                <args>
                    <module>Webgility_Ecc</module>
                    <frontName>ecc</frontName>
                </args>
            </ecc>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <ecc module="ecc">
                <title>Ecc</title>
                <sort_order>71</sort_order>               
                <children>
                    <items module="ecc">
                        <title>Manage Store Token</title>
                        <sort_order>0</sort_order>
						<children>
						<first_page translate="title">
							<title>Configuration</title> 
							<action>ecc/adminhtml_ecc</action>
						</first_page>
                        </children>
                    </items>
                </children>
            </ecc>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <ecc>
                            <title>Ecc Module</title>
                            <sort_order>200</sort_order>
                        </ecc>
                    </children>
                </admin>
            </resources>   
        </acl>
        <layout>
            <updates>
                <ecc>
                    <file>ecc.xml</file>
                </ecc>
            </updates>
        </layout>
    </adminhtml>    
	<global>
            <models>
                <ecc>
                    <class>Webgility_Ecc_Model</class>
                    <resourceModel>ecc_mysql4</resourceModel>
                </ecc>
                <ecc_mysql4>
                    <class>Webgility_Ecc_Model_Mysql4</class>
                    <entities>
                        <ecc>
                            <table>connect_config</table>
                        </ecc>
                    </entities>
                </ecc_mysql4>
            </models>
            <resources>
                <ecc_setup>
                    <setup>
                        <module>Webgility_Ecc</module>
                    </setup>
                    <connection>
                        <use>core_setup</use>
                    </connection>
                </ecc_setup>
                <ecc_write>
                    <connection>
                        <use>core_write</use>
                    </connection>
                </ecc_write>
                <ecc_read>
                    <connection>
                        <use>core_read</use>
                    </connection>
                </ecc_read>
            </resources>
            <blocks>
                <ecc>
                    <class>Webgility_Ecc_Block</class>
                </ecc>
				<adminhtml>
					<rewrite>
						<sales_order>Webgility_Ecc_Block_Sales_Order</sales_order>
						<sales_order_view>Webgility_Ecc_Block_Sales_Order_View</sales_order_view>
						<sales_order_grid>Webgility_Ecc_Block_Sales_Order_Grid</sales_order_grid>
						<sales_order_view_info>Webgility_Ecc_Block_Sales_Order_View_Info</sales_order_view_info>
						
					</rewrite>
				</adminhtml>
            </blocks>
            <helpers>
                <ecc>
                    <class>Webgility_Ecc_Helper</class>
                </ecc>
            </helpers>
			<rewrite>
            <webgility_ecc_desktop70>
                <from><![CDATA[#^/webgility/webgility-magento.php#]]></from>
                <to>/ecc/index/index</to>
            </webgility_ecc_desktop70>
			<webgility_ecc_desktop71>
                <from><![CDATA[#^/webgility/upgrade.php#]]></from>
                <to>/ecc/index/index</to>
            </webgility_ecc_desktop71>
			<webgility_ecc_desktop72>
                <from><![CDATA[#^/ecc/wcpinstall/installbtn#]]></from>
                <to>/ecc/index/index</to>
            </webgility_ecc_desktop72>
        </rewrite>
        </global>
    </config>